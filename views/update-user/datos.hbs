<body>
  <h1>Skate Park</h1>

  <div class="py-4">
    <h2>Datos del perfil</h2>
    <hr class="w-50" />

    <div>
      {{#if data}}

        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input
              class="form-control m-auto"
              disabled
              value="{{data.email}}"
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input
              class="form-control m-auto"
              disabled
              value="{{data.nombre}}"
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input
              type="password"
              class="form-control m-auto"
              disabled
              value="12345678"
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input
              type="password"
              class="form-control m-auto"
              disabled
              value="12345678"
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>AÃ±os de experiencia</label>
            <input
              class="form-control m-auto"
              disabled
              value="{{data.anos_experiencia}}"
            />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input
              class="form-control m-auto"
              disabled
              value="{{data.especialidad}}"
            />
          </div>
        </div>
        <div class="mb-1">
          <button class="btn btn-primary"><a
              href="/update/?id={{data.id}}&email={{data.email}}"
              style="color:#fff;text-decoration:none;"
            >Presiona para actualizar</a></button>
        </div>
        <div>
          <button id="btnDelete" class="btn btn-danger">Eliminar cuenta</button>
        </div>

      {{/if}}
    </div>
  </div>
</body>

<script src="/js/deleteUser.js"></script>