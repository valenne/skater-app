<body>
  <h1>Skate Park</h1>
  <div class="py-4">
    <h2>Administración</h2>
    <hr class="w-50" />
    <table class="table w-50 m-auto">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Foto</th>
          <th scope="col">Nombre</th>
          <th scope="col">Años de experiencia</th>
          <th scope="col">Especialidad</th>
          <th scope="col">Estado</th>
        </tr>
      </thead>
      <tbody>
        {{#each skaters}}
          <tr>
            <th scope="row">{{inc @index}}</th>
            <td><img style="height:75px;" src="/uploads/{{this.foto}}"</td>
            <td>{{this.nombre}}</td>
            <td style="text-align:center;">{{this.anos_experiencia}}</td>
            <td>{{this.especialidad}}</td>
            <td><input type="checkbox" {{#if this.estado}} checked {{/if}} onclick="changeStatus({{this.id}}, this)" /></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>

<script src="/js/changeStatus.js"></script>